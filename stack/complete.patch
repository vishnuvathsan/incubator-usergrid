+		byte[] ret = new byte[resultBytesCount];
+		for (int i = 0; i < resultBytesCount; i++) {
+			ret[i] = (byte)((num >> ((resultBytesCount - 1 - i) * 8)) & 0xFF);
+		}
+		return ret;
+	}
